<?php
$enabled = Mage::getStoreConfig('poboxrestrictions/general/enabled');
$messageEnabled = Mage::getStoreConfig('poboxrestrictions/warning/enabled');
$message = Mage::getStoreConfig('poboxrestrictions/warning/message');
?>
<?php if ($enabled && $messageEnabled && $message != ''): ?>
    <script type='text/javascript'>
        $(document).observe("dom:loaded", function () {
            "use strict";
            $$('label[for=shipping:street1]')[0].insert({
                before: "<div id='poboxrestrictions-warning'><?php echo htmlspecialchars($message); ?></div>"
            });
        });
    </script>
<?php endif; ?>
